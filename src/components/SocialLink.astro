---
import GitHubIcon from "./icons/GitHubIcon.astro";
import TwitchIcon from "./icons/TwitchIcon.astro";
import TwitterIcon from "./icons/TwitterIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import DiscordIcon from "./icons/DiscordIcon.astro";

interface Props {
  name: string;
  url: string;
  icon: string;
}

const { name, url, icon } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="group block w-full p-6 bg-gradient-to-r from-gray-900/50 to-gray-800/50 backdrop-blur-sm rounded-xl border border-cyan-500/30 hover:border-cyan-400 hover:shadow-lg hover:shadow-cyan-500/25 transition-all duration-300 transform hover:scale-[1.02] hover:-translate-y-1 relative overflow-hidden"
>
  <!-- Animated background effect -->
  <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  
  <!-- Glowing border effect -->
  <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-cyan-500 to-blue-500 opacity-0 group-hover:opacity-20 blur-sm transition-opacity duration-300"></div>
  
  <div class="flex items-center space-x-6 relative z-10">
    <div>
      {icon === 'github' && <GitHubIcon class="text-white" />}
      {icon === 'twitch' && <TwitchIcon class="text-white" />}
      {icon === 'twitter' && <TwitterIcon class="text-white" />}
      {icon === 'instagram' && <InstagramIcon class="text-white" />}
      {icon === 'discord' && <DiscordIcon class="text-white" />}
    </div>
    
    <div class="flex-1">
      <h3 class="font-bold text-xl text-white group-hover:text-cyan-400 transition-colors duration-300">
        {name}
      </h3>
    </div>
    
    <div class="text-cyan-400 group-hover:text-white group-hover:translate-x-1 transition-all duration-300">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
      </svg>
    </div>
  </div>
  
  <!-- Corner accent -->
  <div class="absolute top-0 left-0 w-2 h-2 bg-cyan-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  <div class="absolute bottom-0 right-0 w-2 h-2 bg-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
</a>