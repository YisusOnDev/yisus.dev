---
import { getTranslation } from "../i18n";

interface Props {
  title: string | { es: string; en: string };
  description: string | { es: string; en: string };
  tech: string[];
  image?: string;
  liveUrl?: string;
  githubUrl?: string;
  locale?: string;
  date?: string;
}

const { title, description, tech, image, liveUrl, githubUrl, locale = 'es', date } = Astro.props;

// Función helper para obtener el texto correcto según el idioma
const getLocalizedText = (text: string | { es: string; en: string }) => {
  if (typeof text === 'string') return text;
  return text[locale as keyof typeof text] || text.es;
};

const localizedTitle = getLocalizedText(title);
const localizedDescription = getLocalizedText(description);
const t = getTranslation(locale);
---

<div
  class="group relative bg-gradient-to-br from-gray-900/90 to-gray-800/90 backdrop-blur-sm rounded-2xl overflow-hidden border border-blue-500/30 hover:border-blue-400 transition-all duration-500 transform hover:scale-[1.02] hover:-translate-y-2 hover:shadow-2xl hover:shadow-blue-500/25"
>
  <!-- Animated background glow -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-blue-500/10 via-purple-500/10 to-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
  >
  </div>

  <!-- Header with title -->
  <div class="relative p-6 pb-4">
    <div class="flex items-start justify-between">
      <h3
        class="text-2xl font-bold text-white group-hover:text-blue-400 transition-colors duration-300 mb-2"
      >
        {localizedTitle}
      </h3>
      <div
        class="w-3 h-3 rounded-full bg-blue-400 group-hover:bg-cyan-400 transition-colors duration-300 animate-pulse"
      >
      </div>
    </div>

    <!-- Divider line -->
    <div
      class="w-full h-px bg-gradient-to-r from-blue-500/50 to-transparent group-hover:from-blue-400 transition-colors duration-300"
    >
    </div>
  </div>

  <!-- Project Image or Default Icon -->
  <div class="px-6 pb-4">
    {image ? (
      <div class="relative group/image">
        <img
          src={image.startsWith('http://') || image.startsWith('https://') ? image : `/images/${image}`}
          alt={`${localizedTitle} preview`}
          class="w-full h-48 object-cover rounded-lg border border-blue-500/30 group-hover:border-blue-400/50 transition-colors duration-300"
        />
        <!-- Expand icon -->
        <button
          onclick={`openImageModal('${image.startsWith('http://') || image.startsWith('https://') ? image : `/images/${image}`}', '${localizedTitle.replace(/'/g, "\\'")}', '${localizedTitle.replace(/[^a-zA-Z0-9]/g, '').toLowerCase()}')`}
          class="absolute inset-0 flex items-center justify-center opacity-0 group-hover/image:opacity-100 transition-all duration-300 rounded-lg"
          aria-label="Ver imagen completa"
        >
          <div class="w-10 h-10 bg-black/80 hover:bg-black/90 rounded-full flex items-center justify-center hover:scale-110 transition-all duration-300">
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"
              />
            </svg>
          </div>
        </button>
      </div>
    ) : (
      <div class="w-full h-48 bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg border border-blue-500/30 flex items-center justify-center group-hover:border-blue-400/50 transition-colors duration-300">
        <svg
          class="w-16 h-16 text-cyan-400 group-hover:text-blue-400 transition-colors duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
          />
        </svg>
      </div>
    )}
  </div>

  <div class="relative p-6 pt-0">
    <p
      class="text-gray-300 group-hover:text-gray-200 mb-4 leading-relaxed transition-colors duration-300"
    >
      {localizedDescription}
    </p>

    {date && (
      <div class="mb-4">
        <span class="text-sm text-cyan-400 font-medium">
          {t.projects.date}: {date}
        </span>
      </div>
    )}

    <!-- Tech stack -->
    <div class="flex flex-wrap gap-2 mb-6">
      {
        tech.map((item) => (
          <span class="px-3 py-1 bg-gradient-to-r from-gray-800 to-gray-700 border border-cyan-500/30 text-cyan-300 rounded-lg text-sm font-medium hover:border-cyan-400/50 group-hover:border-cyan-400/70 transition-all duration-300">
            {item}
          </span>
        ))
      }
    </div>

    <!-- Action buttons -->
    <div class="flex gap-4">
      {
        liveUrl && (
          <a
            href={liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 rounded-lg transition-all duration-300 font-medium text-white shadow-lg hover:shadow-blue-500/25 transform hover:scale-105"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
            Demo Live
          </a>
        )
      }

      {
        githubUrl && (
          <a
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-5 py-3 border border-gray-600 hover:border-gray-400 bg-gray-800/50 hover:bg-gray-700/50 rounded-lg transition-all duration-300 font-medium text-gray-300 hover:text-white transform hover:scale-105"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            Código
          </a>
        )
      }
    </div>
  </div>

  <!-- Corner decorations -->
  <div
    class="absolute top-4 left-4 w-4 h-4 border-l-2 border-t-2 border-cyan-400 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
  >
  </div>
  <div
    class="absolute bottom-4 right-4 w-4 h-4 border-r-2 border-b-2 border-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
  >
  </div>

  <!-- Scanning line effect -->
  <div
    class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-cyan-400 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
  >
  </div>
</div>

<!-- Image Modal -->
<div
  id={`image-modal-${localizedTitle.replace(/[^a-zA-Z0-9]/g, '').toLowerCase()}`}
  class="fixed inset-0 z-50 hidden bg-black/90 backdrop-blur-sm flex items-center justify-center p-4"
  onclick={`closeImageModal('${localizedTitle.replace(/[^a-zA-Z0-9]/g, '').toLowerCase()}')`}
>
  <div class="relative max-w-4xl max-h-full">
    <!-- Close button -->
    <button
      onclick={`closeImageModal('${localizedTitle.replace(/[^a-zA-Z0-9]/g, '').toLowerCase()}')`}
      class="absolute -top-12 right-0 w-8 h-8 bg-black/70 hover:bg-black/90 rounded-full flex items-center justify-center text-white hover:scale-110 transition-all duration-300"
      aria-label="Cerrar modal"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Modal image -->
    <img
      id={`modal-image-${localizedTitle.replace(/[^a-zA-Z0-9]/g, '').toLowerCase()}`}
      src=""
      alt=""
      class="max-w-full max-h-full object-contain rounded-lg shadow-2xl"
      onclick="event.stopPropagation()"
    />
  </div>
</div>

<script is:inline>
  window.openImageModal = function(imageSrc, altText, modalId) {
    const modal = document.getElementById(`image-modal-${modalId}`);
    const modalImage = document.getElementById(`modal-image-${modalId}`);

    if (modal && modalImage) {
      modalImage.src = imageSrc;
      modalImage.alt = altText;
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  }

  window.closeImageModal = function(modalId) {
    let modal = null;

    if (modalId) {
      modal = document.getElementById(`image-modal-${modalId}`);
    } else {
      const modals = document.querySelectorAll('[id^="image-modal-"]');
      modals.forEach(m => {
        if (!m.classList.contains('hidden')) {
          modal = m;
        }
      });
    }

    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      window.closeImageModal();
    }
  });
</script>
